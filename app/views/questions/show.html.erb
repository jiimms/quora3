<h1>Answer this Question</h1>

<h2><%=@question.title%></h2>

	<small>Submitted <%=time_ago_in_words(@question.created_at)%> ago by <%=@question.user.name%> </small><br>

	<div>
		<button>
	<%=link_to like_question_path(@question), method: :put do %>Rate up 		
		<%=@question.get_upvotes.size%></button>
	<%end%>
	<button>
	<%=link_to dislike_question_path(@question), method: :put do %>Rate down 		
		<%=@question.get_downvotes.size%></button>
	<%end%>
	<%if user_signed_in?%>

	<% unless current_user.favorite_questions.exists?(id: @question.id) %>
<button><%= link_to 'Favorite', favorite_questions_path(question_id: @question), method: :post %></button>
<% else %>
<button><%= link_to 'Unfavorite', favorite_question_path(@question), method: :delete %></button>
<% end %>
<% end %>
</div>

<%if @question.user==current_user%>
<%=link_to "Edit", edit_question_path(@question) %>
<%= link_to "Delete", @question, method: :delete, data: {confirm: "Are you sure?"}%><br>
<%end %>



<br><%=@question.responses.count%> Answers <br>

<%= render @question.responses%> <br>
<h3><%= render 'responses/form'%>
	